<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form">
    <div class="row">
      <div class="input-field col s8">
        <input value="{{post.title}}" id="post-title" type="text" name="post-title" class="validate">
      </div>
    </div>
    <div class="row">
      <div class="input-field col s10">
        <textarea value="{{post.text}}" id="post-text" type="text" name="post-text" class="validate"></textarea>
      </div>
    </div>
    <div class="row">
      Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="btn-large waves-effect waves-light orange lighten-1">Save Post</button>
    <button type="button" id="delete-post-btn" class="btn-large waves-effect waves-light red lighten-1">Delete Post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>